{
  "$ref": "#/definitions/UserConfig",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Detail": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "emoji": {
          "type": "string"
        }
      },
      "required": ["description", "emoji"],
      "type": "object"
    },
    "Details": {
      "additionalProperties": {
        "$ref": "#/definitions/Detail"
      },
      "type": "object"
    },
    "Questions": {
      "enum": ["type", "scope", "subject", "body", "breaking", "issues"],
      "type": "string"
    },
    "UserConfig": {
      "additionalProperties": false,
      "properties": {
        "breakingChangeEmoji": {
          "type": "string"
        },
        "closedIssueEmoji": {
          "type": "string"
        },
        "details": {
          "$ref": "#/definitions/Details"
        },
        "disableEmoji": {
          "type": "boolean"
        },
        "maxMessageLength": {
          "type": "number"
        },
        "minMessageLength": {
          "type": "number"
        },
        "questions": {
          "items": {
            "$ref": "#/definitions/Questions"
          },
          "type": "array"
        },
        "scopes": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "types": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "useCommitlintConfig": {
          "type": "boolean"
        }
      },
      "type": "object"
    }
  }
}
